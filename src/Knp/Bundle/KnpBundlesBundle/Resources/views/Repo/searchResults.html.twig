{% extends 'KnpBundlesBundle:Repo:search.html.twig' %}

{% block body_attributes %}class="repos-list" id="search-result"{% endblock %}

{% block search_query %}{{ query }}{% endblock %}

{% block title %}{% trans with {'%query%': query} %}search.results.meta.title{% endtrans %}{% endblock %}

{% block description %}{% trans with {'%count%': repos|length, '%query%': query} %}search.results.meta.description{% endtrans %}{% endblock %}

{% block content %}
    <h1>{% trans with {'%query%': query} %}search.results.title{% endtrans %}</h1>
    <div id="main">
        <section id="search-result-bundles">
            <div class="content-title">
                <h1>{{ bundles|length }} Bundle{{ bundles|length > 1 ? 's' : '' }}</h1>
            </div>
            {% include 'KnpBundlesBundle:Bundle:bigList.html.twig' with {'repos': bundles} %}
        </section>
        <section id="search-result-projects">
            <div class="content-title">
                <h1 class="section-title">{{ projects|length }} Project{{ projects|length > 1 ? 's' : '' }}</h1>
            </div>
            {% include 'KnpBundlesBundle:Project:bigList.html.twig' with {'repos': projects} %}
        </section>
    </div>
{% endblock %}
