<div id="last-created-bundles">
    <h2>Last created bundles</h2>
    <ul class="bundles_list">
        {% for i, bundle in bundles %}
        <li class="bundle">
            <a href="{{ path('repo_show', { 'username': bundle.username, 'name': bundle.name }) }}">
                <span class="name">{{ bundle.name }}</span>
                <span class="number">{{ bundles|length - i }}</span>
                <span class="date">
                    <span class="day">{{ bundle.createdAt|date('d') }}</span>
                    <span class="month">{{ bundle.createdAt|date('m') }}</span>
                </span>
                <span class="description">{{ bundle.description }}</span>
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
