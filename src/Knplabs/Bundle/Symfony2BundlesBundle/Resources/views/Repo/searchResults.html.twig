{% extends 'KnplabsSymfony2Bundles:Repo:search.html.twig' %}

{% block body_attributes %}id="search-result"{% endblock %}

{% block search_query %}{{ query }}{% endblock %}

{% block title %}Search {{ query }}{% endblock %}

{% block h1 %}Search "{{ query }}"{% endblock %}

{% block description %}{{ repos|length }} Repositories found for {{ query }}{% endblock %}

{% block content %}
    <div id="main">
    {% if bundles|length > 0 %}
        <div id="search-result-bundles">
            <h2>{{ bundles|length }} Bundle{{ bundles|length > 1 ? 's' : '' }}</h2>
            {% include 'KnplabsSymfony2Bundles:Bundle:bigList.html.twig' with {'repos': bundles} %}
        </div>
    {% endif %}
    {% if projects|length > 0 %}
        <div id="search-result-projects">
            <h2 class="section-title">{{ projects|length }} Project{{ projects|length > 1 ? 's' : '' }}</h2>
            {% include 'KnplabsSymfony2Bundles:Project:bigList.html.twig' with {'repos': projects} %}
        </div>
    {% endif %}
    </div>
    <div id="side">
        {% render 'symfony2bundles.controller.bundle:listFeaturedAction' with {'max': 2} %}
    </div>
{% endblock %}
