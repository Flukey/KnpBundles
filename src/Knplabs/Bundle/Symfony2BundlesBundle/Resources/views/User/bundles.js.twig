{% set array = [] %}
{% for bundle in bundles %}
{% set array = array|merge({
    'name':         bundlename,
    'username':     bundle.username,
    'description':  bundle.description,
    'score':        bundle.score,
    'followers':    bundle.followers,
    'forks':        bundle.forks,
    'createdAt':    bundle.createdAt|date('U'),
    'lastCommitAt': bundle.lastCommitAt|date('U'),
    'tags':         bundle.tags,
    'lastCommits':  bundle.lastCommits,
    'readme':       bundle.readme
}) %}
{% endfor %}
{{ '%s(%s)'|format(callback, array|json_encode) }}
