<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="true"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="../src/autoload.php"
>
  <testsuites>
    <testsuite name="ApiBundle Test Suite">
      <directory>../src/Application/ApiBundle/Tests</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory>../src/Application/ApiBundle</directory>
      <exclude>
        <directory>../src/Application/ApiBundle/Resources</directory>
        <directory>../src/Application/ApiBundle/Tests</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
